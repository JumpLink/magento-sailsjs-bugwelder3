form.form-signin(ng-submit="signin()", name="signinForm", method="POST")
  .form-group
    h2(translate) Please sign in
    .control-group(ng-class="{'has-error':signinForm.$invalid, 'has-success':!signinForm.$invalid}")
      .controls
        input.form-control(type="email", id="email", name="email", autocomplete="email", placeholder="{{'Enter E-Mail' | translate}}", ng-model="user.email")
        input.form-control(type="password", id="password",  name="password", autocomplete="password", placeholder="{{'Enter Password' | translate}}", ng-model="user.password")
    button.btn.btn-lg.btn-primary.btn-block(type="submit", translate) Sign in